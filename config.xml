<?xml version='1.0' encoding='utf-8'?>
<widget id="com.viveenunclick.mx" version="1.6.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Vive En Un Click</name>
    <description>
        Red de negocios
    </description>
    <author email="bernagaufo@hotmail.com" href="https://facebook.com/villbercreativo">
        Villber Guadalajara
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="*://*.googleapis.com/*" subdomains="true" />
    <access origin="*://*.gstatic.com/*" subdomains="true" />
    <access origin="*://*.google.com/*" subdomains="true" />
    <access origin="*://*.googleusercontent.com/*" subdomains="true" />
    <access origin="*://*.gstatic.com/*" subdomains="true" />
    <access origin="http://google.com" />
    <access origin="https://google.com" />
    <access origin="https://*.google.com" />
    <access launch-external="yes" origin="tel:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" launch-external="yes" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <plugin name="cordova-plugin-googlemaps" source="npm">
         <param name="API_KEY_FOR_ANDROID" value="AIzaSyBezcuO8jYhYFaelSbKgLBEANYR-1uW_-Q" />
         <param name="API_KEY_FOR_IOS" value="AIzaSyDCTVS77zM0c-fJaQILtEmTLzbhSrqeKO8" />
     </plugin>
    <platform name="android">
        <preference name="android-minSdkVersion" value="18" />
        <allow-intent href="market:*" />
        <preference name="SplashScreen" value="/img/splash.jpg" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <preference name="SplashScreenWidth" value="258" />
        <preference name="SplashScreenHeight" value="378" />
        <preference name="SplashScreenBackgroundColor" value="#ffffff" />
        <feature name="SocialSharing">
            <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
        </feature>
        <icon src="www/res/icon/android/icon-48-mdpi.png" />
        <icon density="ldpi" src="www/res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="www/res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="www/res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="www/res/icon/android/icon-996-xhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <feature name="SocialSharing">
            <param name="ios-package" value="SocialSharing" />
        </feature>
    </platform>
    <preference name="Orientation" value="portrait" />
    <preference name="loadUrlTimeoutValue" value="700000" />
    <preference name="SplashScreen" value="screen" />
    <splash src="/img/splash.jpg" />
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <plugin name="cordova-plugin-network-information" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.2.0" />
</widget>
